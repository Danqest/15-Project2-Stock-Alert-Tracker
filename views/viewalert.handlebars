<div class="card my-5" style="width: 18rem; ">
  <div class="card-body bg-success text-center">
    <h5 class="card-title ">{{ticker}} <span class="text-danger">({{status}})</span></h5>
  </div>
  <ul class="list-group list-group-flush">
      <li class="list-group-item">
   <span for="img" aria-label="stoploss">📅 Open Day: </span>{{format_date createdAt}}
   </li>
   <li class="list-group-item">
   <span for="img" aria-label="stoploss">⏰ Open At: </span>{{format_time createdAt}}
   </li>
    <li class="list-group-item"><span for="img" aria-label="price">🛍</span> Open : {{entry}}</li>
    <li class="list-group-item"><span for="img" aria-label="price">💲</span> Entry Price: {{entry_price}}</li>
    <li class="list-group-item"><span for="img" aria-label="target">🎯</span> Target: {{target}}</li>
    <li class="list-group-item"><span for="img" aria-label="stoploss">🛑</span> Stoploss: {{stoploss}}</li>
   {{#if closed_price}} 
   <li class="list-group-item bg-warning">
   </li>
    <li class="list-group-item"><span for="img" aria-label="price">🛍</span> {{close_entry}}</li>
   <li class="list-group-item"><span for="img" aria-label="stoploss">💰</span>Closed Price: {{closed_price}}</li>
   
   
   <li class="list-group-item">
   <span for="img" aria-label="stoploss">🗓 Closed Day: </span>{{format_date updatedAt}}
   </li>
    <li class="list-group-item">
   <span for="img" aria-label="stoploss">⏱ Closed Time: </span>{{format_time updatedAt}}
   </li>
   {{/if}}
   <li class="list-group-item"><span for="img" aria-label="stoploss">✍️</span> Alert By: {{user.username}}</li>
  </ul>
  <div class="card-body text-center">
      <button id="delete-alert" data-id="{{id}}"  type="button" class="btn btn-link" >Delete</button>
  </div>
</div>
{{#if closed_price}} 

{{else}}

<section class="container">
        <h1 class="text-center">Closing The Alert</h1>
        <form class="form">
            <table class="table border my-2">
        <thead class="table-dark">
          <tr>
            <th scope="col">Sell/Buy To Closed</th>
            <th scope="col">Closed Price</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
                <select class="form-input" type="text" id="closed-entry" required>
                    <option value="none" selected disabled hidden>SELECT AN OPTION</option>
                    <option value="SELL TO CLOSE">Sell To Close</option>
                    <option value="BUY TO CLOSE">Buy To Close</option>
                </select>
            </td>
            <td>
                <input class="form-input" type="text" id="closed-price" required />
            </td>
          </tr>
        </tbody>
      </table>
       <div class="form-group text-end">
                <input id="close-alert-submit" data-id="{{id}}" class="btn btn-primary" type="submit" value="Submit">
        </div>
        </form>
    </section>
<script src='/js/closedalert.js'></script>
{{/if}}

<script src='/js/deletealert.js'></script>
